<Window
    x:Class="Shamisen.Tests.IO.WinRt.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Shamisen.Tests.IO.WinRt"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Closed="Window_Closed"
    Activated="Window_ActivatedAsync"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="myButton" Click="MyButton_Click">Test Audio Output</Button>
            <Button x:Name="inputTest" Click="InputTest_Click">Test Audio Input</Button>
        </StackPanel>
        <ProgressBar x:Name="PbLevel" Margin="5" Width="360" Height="20" Minimum="0" Maximum="120.0"/>
    </StackPanel>
</Window>
